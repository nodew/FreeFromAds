{
    "name": "Ads Free",
    "description": "Free you from all kinds of ads in web pages",
    "manifest_version": 2,
    "default_locale": "en",
    "version": "0.0.1",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "permissions": [
        "*://weibo.com/*",
        "*://*.zhihu.com/*",
        "activeTab",
        "tabs",
        "webRequest",
        "webNavigation"
    ],
    "options_ui": {
        "page": "pages/options/options.html",
        "chrome_style": true
    },
    "page_action": {
        "default_title": "Ads free",
        "default_popup": "pages/popup/popup.html",
        "default_icon": "assets/buysellads_inactive.png"
    },
    "icons": {
        "16": "assets/buysellads.png",
        "32": "assets/buysellads.png",
        "48": "assets/buysellads.png",
        "128": "assets/buysellads.png"
      }
}